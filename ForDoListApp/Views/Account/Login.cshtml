@{
    ViewBag.Title = "Login";
    Layout = null; // or use your main layout if you want header/footer
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login - ForDoListApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #292929;
            color: #f8f8ff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .card {
            background-color: #1e1e1e;
            border-radius: 12px;
            padding: 2rem;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 15px rgba(108, 44, 236, 0.4);
        }
        .form-control {
            background-color: #292929;
            border: 1.5px solid #6c2cec;
            color: #f8f8ff;
            transition: border-color 0.3s ease;
        }
        .form-control:focus {
            border-color: #7024f8;
            box-shadow: 0 0 8px #7024f8;
            background-color: #292929;
            color: #f8f8ff;
        }
        .btn-primary {
            background-color: #6c2cec;
            border-color: #6c2cec;
            transition: background-color 0.3s ease, border-color 0.3s ease;
            font-weight: 600;
        }
        .btn-primary:hover {
            background-color: #7024f8;
            border-color: #7024f8;
        }
        .form-label {
            font-weight: 600;
        }
        a {
            color: #6c2cec;
            text-decoration: none;
            transition: color 0.3s ease;
        }
        a:hover {
            color: #7024f8;
            text-decoration: underline;
        }
        .header-text {
            text-align: center;
            margin-bottom: 1.5rem;
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 1px;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="header-text">Welcome Back</div>
        <form method="post" action="/Account/Login">
            <div class="mb-3">
                <label for="InputEmail" class="form-label">Email address</label>
                <input type="email" class="form-control" id="InputEmail" name="Email" placeholder="you@example.com" required />
            </div>
            <div class="mb-4">
                <label for="InputPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="InputPassword" name="Password" placeholder="Your password" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Log In</button>
        </form>
        <div class="mt-3 text-center">
            <span>Don't have an account? <a href="/Account/Register">Register here</a></span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
